<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F4F7"
    android:orientation="vertical">

    <!-- Header Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:elevation="6dp"
        android:orientation="vertical"
        android:paddingBottom="14dp">

        <!-- Top Bar: Back Button + Title -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/topical_forest"
            android:paddingHorizontal="16dp">
            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_back_arrow"
                app:tint="@color/white"/>
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/tv_screen_title"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Connections"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"/>
        </RelativeLayout>

        <!-- Tab Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/bg_tab_container"
            android:orientation="horizontal"
            android:padding="4dp">

            <Button
                android:id="@+id/btn_tab_connections"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_tab_active"
                android:text="Connection"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_tab_pending"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginStart="3dp"
                android:layout_marginEnd="3dp"
                android:background="@drawable/bg_tab_inactive"
                android:text="Pending Request"
                android:textAllCaps="false"
                android:textColor="#3B82F6"
                android:textSize="12sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_tab_sent"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_tab_inactive"
                android:text="Sent Request"
                android:textAllCaps="false"
                android:textColor="#3B82F6"
                android:textSize="12sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- User Count Display -->
        <TextView
            android:id="@+id/tv_user_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="0 of 0 users"
            android:textColor="#6B7280"
            android:textSize="14sp"
            android:textStyle="normal" />

    </LinearLayout>

    <!-- RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_connections"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:paddingTop="8dp"
        android:paddingBottom="4dp" />

</LinearLayout>