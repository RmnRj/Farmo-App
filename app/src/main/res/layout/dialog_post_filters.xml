<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:background="#242526"
    android:orientation="vertical"
    android:padding="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Post filters"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/btnClose"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            app:tint="@color/white" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Use filters to find posts on your timeline."
        android:textColor="#B0B3B8"
        android:textSize="14sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="This will not affect how others see your timeline."
        android:textColor="#B0B3B8"
        android:textSize="14sp" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="4"
        android:useDefaultMargins="true">

        <TextView
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal|center_vertical"
            android:text="Go to:"
            android:textColor="#E4E6EB"
            android:textSize="16sp" />

        <Spinner
            android:id="@+id/spinnerYear"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:background="#4E4F50"
            android:padding="8dp" />

        <TextView
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal|center_vertical"
            android:layout_marginTop="16dp"
            android:text="Posted by:"
            android:textColor="#E4E6EB"
            android:textSize="16sp" />

        <Spinner
            android:id="@+id/spinnerPostedBy"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:layout_marginTop="16dp"
            android:background="#4E4F50"
            android:padding="8dp" />

        <TextView
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal|center_vertical"
            android:layout_marginTop="16dp"
            android:text="Privacy:"
            android:textColor="#E4E6EB"
            android:textSize="16sp" />

        <Spinner
            android:id="@+id/spinnerPrivacy"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:layout_marginTop="16dp"
            android:background="#4E4F50"
            android:padding="8dp" />

        <TextView
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal|center_vertical"
            android:layout_marginTop="16dp"
            android:text="Tagged posts:"
            android:textColor="#E4E6EB"
            android:textSize="16sp" />

        <Spinner
            android:id="@+id/spinnerTaggedPosts"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:layout_marginTop="16dp"
            android:background="#4E4F50"
            android:padding="8dp" />

    </GridLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:gravity="end"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnClear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:backgroundTint="#4E4F50"
            android:text="Clear"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btnDone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#2374E1"
            android:text="Done"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>