<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="14dp">

        <!-- ── Reviewer Header Row ──────────────────────────────────────────────── -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!-- Avatar Circle (initials) -->
            <TextView
                android:id="@+id/tvReviewerAvatar"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:background="@drawable/avatar_circle"
                android:gravity="center"
                android:text="A"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Name + Type -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvReviewerName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reviewer Name"
                    android:textColor="#212121"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvReviewerType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Consumer"
                    android:textColor="#9E9E9E"
                    android:textSize="11sp" />
            </LinearLayout>

            <!-- Date -->
            <TextView
                android:id="@+id/tvReviewDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2024-01-01"
                android:textColor="#BDBDBD"
                android:textSize="11sp" />

        </LinearLayout>

        <!-- ── Star Rating ─────────────────────────────────────────────────────── -->
        <RatingBar
            android:id="@+id/rbReview"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:isIndicator="true"
            android:numStars="5"
            android:rating="3"
            android:progressTint="@color/topical_forest" />

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F1F8E9"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp" />

        <!-- ── Comment ─────────────────────────────────────────────────────────── -->
        <TextView
            android:id="@+id/tvReviewComment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Great farmer, fresh produce!"
            android:textColor="#424242"
            android:textSize="13sp"
            android:lineSpacingExtra="3dp" />

    </LinearLayout>
</androidx.cardview.widget.CardView>